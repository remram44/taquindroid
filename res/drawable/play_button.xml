<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">        
        <shape>
            <gradient
                android:startColor="#000000"
                android:endColor="#3f3fff"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#3f3fff" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="#ffffff"
                android:endColor="#3f3fff"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#3f3fff" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>
